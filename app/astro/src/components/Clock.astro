---
<div class="clock-shell" aria-label="Current time" aria-live="polite">
    <span class="clock-time">--:--:-- --</span>
</div>

<script>
    // Scope to this component instance
    const root = document.currentScript.closest('.clock-shell');
    const el = root.querySelector('.clock-time');

    function updateClock() {
        const now = new Date();
        let h = now.getHours();
        const m = now.getMinutes().toString().padStart(2, '0');
        const s = now.getSeconds().toString().padStart(2, '0');
        const ampm = h >= 12 ? 'PM' : 'AM';
        h = h % 12 || 12;
        el.textContent = `${h.toString().padStart(2,'0')}:${m}:${s} ${ampm}`;
    }

    updateClock();
    setInterval(updateClock, 1000);
</script>
