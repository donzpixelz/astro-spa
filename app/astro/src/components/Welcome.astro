---
/**
	* Minimal, project-owned welcome component.
	* No Astro branding, no external links.
	* Tweak the copy below to make it yours.
	*/
const title = 'astro-spa';
const tagline = 'Single Page App on EC2 (Nginx) • CI/CD via GitHub Actions';
const badge = '007'; // visible marker you asked for
---
<section class="hero" aria-labelledby="site-title">
	<div class="wrap">
		<h1 id="site-title" class="title">
			{title} <span class="badge">{badge}</span>
		</h1>
		<p class="tagline">{tagline}</p>

		<div class="grid">
			<div class="card">
				<h2>Welcome</h2>
				<p>This is your home page. Edit <code>src/pages/index.astro</code> or this component at
					<code>src/components/Welcome.astro</code> and push to <code>main</code> to redeploy.</p>
			</div>
			<div class="card">
				<h2>App paths</h2>
				<ul>
					<li><code>src/pages/</code> — routes/pages</li>
					<li><code>src/components/</code> — UI components</li>
					<li><code>public/</code> — static assets (served at /)</li>
				</ul>
			</div>
			<div class="card">
				<h2>Deploy</h2>
				<p>Commit changes and push to <code>main</code>. The GitHub Action builds and syncs to your EC2.</p>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		padding: 28px 0;
	}
	.wrap {
		display: grid;
		gap: 18px;
	}
	.title {
		margin: 0;
		font-size: 28px;
		line-height: 1.2;
	}
	.badge {
		display: inline-block;
		margin-left: .5rem;
		font-size: 0.9rem;
		padding: 2px 8px;
		border-radius: 999px;
		background: linear-gradient(83deg, #7aa2ff, #bc52ee);
		color: #fff;
		vertical-align: middle;
	}
	.tagline {
		margin: 0;
		color: #a4b0c4;
	}
	.grid {
		display: grid;
		gap: 14px;
	}
	@media (min-width: 720px) {
		.grid { grid-template-columns: repeat(3, 1fr); }
	}
	.card {
		background: #11172b;
		border: 1px solid #1b233a;
		border-radius: 14px;
		padding: 16px;
	}
	h2 {
		margin: 0 0 8px;
		font-size: 18px;
	}
	p { margin: 0; color: #cfd6e6; }
	ul { margin: 0; padding-left: 20px; color: #cfd6e6; }
	code {
		background: #0b1020;
		border: 1px solid #1b233a;
		border-radius: 8px;
		padding: 1px 6px;
	}
</style>
