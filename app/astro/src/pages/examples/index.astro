---
import BaseLayout from "../../layouts/BaseLayout.astro";

const links = [
    { href: "/examples/react-theme-switcher",   label: "Theme Switcher (Light/Dark/Sepia)" },
    { href: "/examples/react-accordion",        label: "React Accordion (Accessible)" },
    { href: "/examples/react-filter-table",     label: "Filterable List/Table (React)" },
    { href: "/examples/react-command-palette",  label: "Command Palette (Ctrl/Cmd-K)" },
    { href: "/examples/react-image-gallery",    label: "Image Gallery (Lightbox + Keyboard)" },
    { href: "/examples/react-url-shortener",    label: "URL Shortener (Mock UI)" },
    { href: "/examples/react-clipboard-tools",  label: "“Copy code” / Clipboard Tools" },
    { href: "/examples/react-shopping-cart",  label: "“Shopping Cart" },
];

---
<BaseLayout title="007 Examples · Astro" description="Interactive examples and UI demos">
    <section class="stack">
        <h1>Examples</h1>
        <p class="muted">A small gallery of interactive demos. Pick a category or jump straight to an example.</p>

        <nav class="examples-subnav" aria-label="Examples sub navigation">
            <ul>
                {links.map(link => (
                        <li><a href={link.href}>{link.label}</a></li>
                ))}
            </ul>
        </nav>

        <div class="card">
            <h2 style="margin-top:0">Categories (coming soon)</h2>
            <ul>
                <li>React Components</li>
                <li>UI Patterns</li>
                <li>Data &amp; Lists</li>
            </ul>
        </div>
    </section>
</BaseLayout>
