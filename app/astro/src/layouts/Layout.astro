---
const { title = 'astro-spa', description = 'Multi/Single Page App on AWS EC2 (Nginx + Terraform + GitHub Actions)' } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<meta name="description" content={description} />
	<meta name="generator" content={Astro.generator} />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<title>{title}</title>
</head>
<body>
<header class="site-header">
	<div class="container">
		<h1 class="brand"><a href="/">astro-spa</a></h1>
		<nav class="nav">
			<!-- Add links as you grow -->
			<!-- <a href="/about/">About</a> -->
			<!-- <a href="/docs/">Docs</a> -->
		</nav>
	</div>
</header>

<main class="site-main">
	<div class="container">
		<slot />
	</div>
</main>

<footer class="site-footer">
	<div class="container">
		<small>© {new Date().getFullYear()} astro-spa · Deployed via GitHub Actions → EC2</small>
	</div>
</footer>
</body>
</html>

<style>
	:root {
		--bg: #0b1020;
		--panel: #11172b;
		--text: #e8edf8;
		--muted: #a4b0c4;
		--accent: #7aa2ff;
		--border: #1b233a;
		--radius: 14px;
	}

	html, body {
		margin: 0;
		height: 100%;
		background: var(--bg);
		color: var(--text);
		font: 16px/1.55 system-ui, -apple-system, Segoe UI, Roboto, Inter, "Helvetica Neue", Arial, sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	.container {
		max-width: 980px;
		margin: 0 auto;
		padding: 20px;
	}

	.site-header {
		border-bottom: 1px solid var(--border);
		background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(0,0,0,0));
		position: sticky;
		top: 0;
		z-index: 10;
		backdrop-filter: blur(6px);
	}

	.brand {
		margin: 0;
		font-size: 20px;
		font-weight: 700;
		letter-spacing: 0.2px;
	}

	.brand a {
		color: var(--text);
		text-decoration: none;
	}

	.nav a {
		color: var(--muted);
		text-decoration: none;
		margin-left: 16px;
	}
	.nav a:hover { color: var(--text); }

	.site-main .container {
		background: var(--panel);
		border: 1px solid var(--border);
		border-radius: var(--radius);
		margin-top: 28px;
		padding: 28px;
		box-shadow: 0 10px 30px rgba(0,0,0,0.25);
	}

	.site-footer {
		color: var(--muted);
		border-top: 1px solid var(--border);
		margin-top: 36px;
	}

	/* Basic typography */
	h1, h2, h3 { color: var(--text); margin: 0 0 12px; }
	p { color: var(--muted); margin: 0 0 14px; }
	a { color: var(--accent); }
	a:hover { opacity: 0.9; }

	/* Make images/iframes scale nicely */
	img, video, iframe { max-width: 100%; height: auto; border-radius: 10px; }
</style>
